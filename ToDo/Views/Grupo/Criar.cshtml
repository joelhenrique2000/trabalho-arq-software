@model ToDo.ViewModels.AdicionarGrupoViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Criar grupo</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <h1>Criar grupo</h1>
    <form asp-action="Criar" method="post" class="m-2">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Titulo">Título:</label>
            <input asp-for="Titulo" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Cadastrar grupo</button>
    </form>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Criar">Criar atividade</a>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Ver todas as atividades</a>
    <a class="btn btn-primary" asp-controller="Grupo" asp-action="Index">Ver todas os grupos</a>
</body>
</html>